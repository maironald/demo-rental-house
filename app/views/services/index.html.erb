<%= render "shared/flash"%>
<div class="main-container" style="background-color: wheat;" >
        <div id="left-div" class="left-div" style="background-color: wheat;">
            <div class="left-div-child" style="width: 100%;">
                <%= render 'users/navigation'%>
            </div>
        </div>
        <div id="right-container" class="right-container">
            <%= render 'users/topnav'%>
            <div class="right-div"
                style="background-color: rgb(232, 247, 253); display: flex; flex-direction: column; justify-content: space-around; width: 100%; flex-wrap: wrap;">
                <!-- table -->
                <div class="flex flex-col border m-2 border-slate-700 pb-8 mb-10">
                    <div class="flex justify-between sm:flex-row flex-col border-b border-gray-300 ml-4 mr-4">
                        <h1 class="text-lg m-2 font-bold">Danh Sách Dịch Vụ</h1>
                        <div class="m-2 flex">
                            <%= button_to new_users_service_path, method: :get, class: "text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:bg-blue-800 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600" do %><i class="fa-solid fa-plus mr-2"></i>Thêm Dịch vụ<% end %>
                            <button type="button"
                                class="text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:bg-red-800 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-red-600"><i
                                    class="fa-solid fa-close mr-1"></i>Xóa tất cả</button>
                        </div>
                    </div>
                    <div class="m-4">
                        Tìm:
                        <input type="text" id="search" placeholder="Nhập ten dich vu.." class="w-[200px] m-2 p-2">
                    </div>
                    <!-- table -->
                    <div
                        class="relative overflow-x-auto shadow-md sm:rounded-lg m-4 overflow-y-auto max-h-[300px] max-w-[350px] sm:max-h-[400px] sm:max-w-full">
                        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 min-h-[350px]">
                            <thead
                                class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                    <th scope="col" class="px-6 py-3">
                                        Service Name
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        <div class="flex items-center">
                                            Service Price
                                            <a href="#"><%= image_tag 'icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                                            </a>
                                        </div>
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        <div class="flex items-center">
                                            Note
                                            <a href="#"><%= image_tag 'icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                                            </a>
                                        </div>
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        <span class="sr-only">Edit</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @services.each do |service|%>
                                <tr
                                    class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                    <th scope="row"
                                        class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                      <%= service.name %>
                                    </th>
                                    <td class="px-6 py-4">
                                      <%= service.price%>
                                    </td>
                                    <td class="px-6 py-4">
                                      <%= service.note%>
                                    </td>
                                    <td class="px-6 py-4 flex justify-center">
                                        <%= button_to "Edit",edit_users_service_path(service), method: :get, class: "text-white w-[80px] bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:bg-blue-800 font-medium text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-red-600", remote: true %>
                                        <%= button_to "Delete", users_service_path(service), method: :delete, class: "text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:bg-red-800 font-medium text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-red-600", data: { turbo_confirm: "Bạn có chắc chắn muốn xóa dịch vụ này?" }, remote: true%>
                                    </td>
                                </tr>
                              <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>


                <%= render 'users/footer'%>
            </div>
        </div>
    </div>