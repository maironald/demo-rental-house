<%# the code below is being to render the a tag follow by the routes in the web, Ex: if you are in login page, you will get all a tag of sign up and passwords  %>
<div class="flex justify-between mt-5 mb-5">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_user_session_path, class: "text-red-500" %>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_user_registration_path %>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_user_password_path(resource_name) %>
  <% end %>
</div>
<div class="relative h-10">
  <p class="absolute top-1 left-25 sm:left-30 md:left-40 z-10 bg-white w-5">OR</p>
  <hr class="absolute w-full top-4">
</div>
<div class= "mt-5 flex justify-center">
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= form_for "Login",
        url: omniauth_authorize_path(resource_name, provider),
        method: :post,
        data: { turbo: false } do |f|
      %>
        <%= f.submit "Login", type: "image", src: vite_asset_path("images/icons/btn_google_signin_dark_pressed_web.png"), class: "text-red-500" %><br />
      <% end %>
    <% end %>
  <% end %>
</div>
