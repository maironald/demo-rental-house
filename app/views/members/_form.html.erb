<%= simple_form_for @member, method: (@member.persisted? ? :put : :post), url: (@member.persisted? ? renter_member_path : renter_members_path ) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, as: :string, wrapper_html: {class: 'mb-4'}, label: 'Name:', label_html: {class: 'mb-2 fw-bold'}, required: true, autofocus: true%>
  <%= f.input :phone_number, as: :string, wrapper_html: {class: 'mb-4'}, label: "Phone Number:", label_html: {class: 'mb-2 fw-bold'}%>
  <%= f.input :identity, as: :string, wrapper_html: {class: 'mb-4'}, label: "Identity:", label_html: {class: 'mb-2 fw-bold'} %>
  <%= f.input :relation, as: :string, wrapper_html: {class: 'mb-4'}, label: "Address: ", label_html: {class: 'mb-2 fw-bold'}%>
  <%= f.input :gender, as: :radio_buttons, wrapper_html: {class: 'mb-4 flex'}, collection_html: {class: 'flex p-4'}, label_html: {class: 'mb-2 text-white'}, collection: ['Nam', 'Ná»¯'], value: @renter_name_collections %>
  <%= f.submit 'Save' %>
  <%= link_to 'Back', renters_path %>
<% end %>
