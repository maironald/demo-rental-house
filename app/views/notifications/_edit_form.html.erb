<%= form_with(url: admins_notification_path(@notification), method: 'put', class: "w-[250px] md:w-full flex flex-col flex-wrap") do |form| %>
  <%= form.label "Tiêu Đề:", class: 'mb-2 font-bold'%>
  <%= form.text_field :title, as: :string, class: "input input-bordered input-info w-full", required: true, autofocus: true, value: @title %>
  <%= form.label "Nội dung:", class: 'mb-2 mt-2 font-bold'%>
  <%= form.text_area :body, as: :string, class: "input input-bordered w-full input-success h-[200px] mb-4 border", required: true, value: @body%>
  <%= form.submit 'Lưu', class: "btn btn-primary w-1/2"%>
<% end %>
