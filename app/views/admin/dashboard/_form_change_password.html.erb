<%= form_with(model: @user, url: update_password_user_admin_dashboard_path(@user), method: :put) do |form| %>
  <div>
    <%= form.label "Mật khẩu mới: " , class: "mb-2 font-bold" %>
    <%= form.password_field :password, class: "input input-bordered input-info w-full mt-2", required: true, autofocus: true%>
  </div>

  <div class="mt-2">
    <%= form.label "Nhập lại mật khẩu: ", class: "mb-2 pt-4 mt-2 font-bold" %>
    <%= form.password_field :password_confirmation, class: "input input-bordered w-full input-success mb-4 border mt-2", required: true %>
  </div>

  <%= form.submit 'Xác Nhận', class: "btn btn-primary w-1/2" %>
<% end %>
