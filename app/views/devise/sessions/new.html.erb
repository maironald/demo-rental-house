<section class="bg-gray-50 dark:bg-gray-900 flex items-center justify-center h-screen" data-controller='login'>
  <div class="flex flex-col items-center justify-center px-6 py-8 rounded-lg w-[700px] mx-auto md:h-[700px] lg:py-0">
    <%= link_to root_path, class: "flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white" do%>
      <%= vite_image_tag("images/logo/logo.png", class: 'w-24 h-24 rounded-full mr-2', alt: 'logo')%>
      Rental House
    <% end %>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Sign in to your account
        </h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", data: { login_target: 'input'} } %>
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", data: { login_target: 'input'} } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <button type="submit" class="btn btn-primary w-full">
              Sign in
            </button>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
