<table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 min-h-[350px]">
  <thead
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">
            Invoice Name
        </th>
        <th scope="col" class="px-6 py-3">
          <div class="flex items-center">
              Total Price
              <a href="#">
                <%= vite_image_tag 'images/icons/arrange.svg' , class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
              </a>
          </div>
        </th>
        <th scope="col" class="px-6 py-3">
          <div class="flex items-center">
              Paid Money
              <a href="#">
                <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
              </a>
          </div>
        </th>
        <th scope="col" class="px-6 py-3">
          <div class="flex items-center">
              Remaining
              <a href="#">
                <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
              </a>
          </div>
        </th>
        <th scope="col" class="px-6 py-3">
          <div class="flex items-center">
              Room
              <a href="#">
                <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
              </a>
          </div>
        </th>
        <th scope="col" class="px-6 py-3">
          <div class="flex items-center">
              Renter
              <a href="#">
                <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
              </a>
          </div>
        </th>
        <th scope="col" class="px-6 py-3">
          <span class="sr-only">Edit</span>
        </th>
      </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice|%>
      <tr
          class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
          <th scope="row"
              class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <%= invoice.name %>
          </th>
          <td class="px-6 py-4">
            <%=invoice.total_price%>
          </td>
          <td class="px-6 py-4">
            <%= invoice.paid_money%>
          </td>
          <td class="px-6 py-4">
            <%= invoice.total_price - invoice.paid_money%>
          </td>
          <td class="px-6 py-4">
            <%= Room.find_by(id: invoice.room_id).name%>
          </td>
          <td class="px-6 py-4">
            <%= Renter.find_by(room_id: Room.find_by(id: invoice.room_id), renter_type: 'main').name%>
          </td>
          <td class="px-6 py-4 flex justify-center items-center h-full">
            <%= button_to "Edit",edit_renter_path(renter), method: :get, class: "btn btn-primary btn-large", remote: true %>
            <%= button_to "Delete", renter_path(renter), method: :delete, class: "btn btn-danger btn-large", data: { turbo_confirm: "Bạn có chắc chắn muốn xóa khách hàng này?" }, remote: true%>
          </td>
      </tr>
    <%end%>
  </tbody>
</table>
