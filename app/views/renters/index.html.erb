<%= render 'shared/flash'%>
<div class="main-container">
        <div id="left-div" class="left-div">
            <div class="left-div-child" >
                <%= render 'users/navigation'%>
            </div>
        </div>
        <div id="right-container" class="right-container">
            <%= render 'users/topnav'%>
            <div class="right-div">
                <!-- table -->
                <div class="flex flex-col border m-2 border-slate-700 pb-8 mb-10">
                    <div class="flex justify-between sm:flex-row flex-col border-b border-gray-300 ml-4 mr-4">
                        <h1 class="text-2xl m-2 font-bold">Danh Sách Khách Hàng</h1>
                        <div class="m-2 flex">
                            <%= button_to new_renter_path, method: :get, class: "btn btn-primary btn-large" do %><i class="fa-solid fa-plus mr-2"></i>Thêm Thông Tin Khách Hàng<% end %>
                            <button type="button"
                                class="btn btn-danger btn-large"><i
                                    class="fa-solid fa-close mr-2"></i>Xóa Tất Cả</button>
                        </div>
                    </div>
                    <div class="m-4">
                        Tìm:
                        <input type="text" id="search" placeholder="Nhập tên khách hàng.." class="w-[200px] m-2 p-2">
                    </div>
                    <!-- table -->
                    <div
                        class="relative overflow-x-auto shadow-md sm:rounded-lg m-4 overflow-y-auto max-w-[350px] sm:max-w-[600px] lg:max-h-[400px] lg:max-w-full">
                        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 min-h-[350px]">
                            <thead
                                class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                  <th scope="col" class="px-6 py-3">
                                      Renter Name
                                  </th>
                                  <th scope="col" class="px-6 py-3">
                                      <div class="flex items-center">
                                          Phone Number
                                          <a href="#"><%= vite_image_tag 'images/icons/arrange.svg' , class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %></a>
                                      </div>
                                  </th>
                                  <th scope="col" class="px-6 py-3">
                                      <div class="flex items-center">
                                          Identity
                                          <a href="#">
                                            <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                                          </a>
                                      </div>
                                  </th>
                                  <th scope="col" class="px-6 py-3">
                                      <div class="flex items-center">
                                          Address
                                          <a href="#"> <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                                          </a>
                                      </div>
                                  </th>
                                  <th scope="col" class="px-6 py-3">
                                      <div class="flex items-center">
                                          Gender
                                          <a href="#"> <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                                          </a>
                                      </div>
                                  </th>
                                  <th scope="col" class="px-6 py-3">
                                      <div class="flex items-center">
                                          Deposit
                                          <a href="#"> <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                                          </a>
                                      </div>
                                  </th>
                                   <th scope="col" class="px-6 py-3">
                                      <div class="flex items-center">
                                          Status
                                          <a href="#">
                                               <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                                          </a>
                                      </div>
                                  </th>
                                  <th scope="col" class="px-6 py-3">
                                    <span class="sr-only">Edit</span>
                                  </th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @renters.each do |renter|%>
                                <tr
                                    class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                    <th scope="row"
                                        class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                      <%= renter.name %>
                                    </th>
                                    <td class="px-6 py-4">
                                      <%= renter.phone_number%>
                                    </td>
                                    <td class="px-6 py-4">
                                      <%= renter.identity%>
                                    </td>
                                    <td class="px-6 py-4">
                                      <%= renter.address%>
                                    </td>
                                    <td class="px-6 py-4">
                                      <%= renter.gender%>
                                    </td>
                                    <td class="px-6 py-4">
                                      <%= renter.deposit%>
                                    </td>
                                    <td class="px-6 py-4">
                                      <%= Room.find_by(renter_id: renter.id)? "Đang ở #{Room.find_by(renter_id: renter.id).name}" : "Chưa Có Phòng"%>
                                    </td>
                                    <td class="px-6 py-4 flex justify-center items-center h-full">
                                        <%= button_to "Edit",edit_renter_path(renter), method: :get, class: "btn btn-primary btn-large", remote: true %>
                                        <%= button_to "Delete", renter_path(renter), method: :delete, class: "btn btn-danger btn-large", data: { turbo_confirm: "Bạn có chắc chắn muốn xóa khách hàng này?" }, remote: true%>
                                    </td>
                                </tr>
                              <%end%>
                            </tbody>
                        </table>
                    </div>
                </div>


                <%= render 'users/footer'%>
            </div>
        </div>
    </div>
