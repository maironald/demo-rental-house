<section class="bg-gray-50 dark:bg-gray-900 flex items-center justify-center h-screen" data-controller="login">
  <div class="flex flex-col items-center justify-center px-6 py-8 rounded-lg w-[700px] mx-auto md:h-[700px] lg:py-0">
    <%= link_to root_path, class: "flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white" do%>
      <%= vite_image_tag("images/logo/logo.png", class: 'w-24 h-24 rounded-full mr-2', alt: 'logo')%>
      Rental House
    <% end %>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <div class="flex">
          <%= link_to new_user_session_path do%>
            <%= vite_image_tag("images/icons/back.svg", class: "w-6 h-6 mr-6")%>
          <%end%>
          <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
            Change your password
          </h1>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password,
                        label: "New password",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirm your new password",
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Change my password" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
