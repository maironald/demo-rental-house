<%= turbo_frame_tag @renter.persisted? ? "renter_list" : "room_list" do%>
  <main class="flex-1 overflow-y-auto md:pt-4 pt-4 px-6  bg-base-200">
    <div class="card w-full p-6 bg-base-100 shadow-xl mt-2">
      <div class="flex">
        <%= link_to @renter.persisted? ? renters_path : rooms_path  do%>
          <%= vite_image_tag("images/icons/back.svg", class: "w-6 h-6 mr-6")%>
        <%end%>
        <div class="text-xl font-semibold"><%= @renter.persisted? ? "Chỉnh sửa " : "Thêm "%>thông tin của khách thuê</div>
      </div>
      <div class="divider mt-2"></div>
      <%= render "form"%>
    </div>
  </main>
<%end%>
