<div class="p-6 bg-gray-50 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 flex flex-col mt-6 pb-8 mb-10 mr-4 ml-4">
  <div class="flex justify-between sm:flex-row flex-col border-b border-gray-300 ml-4 mr-4">
    <h1 class="text-2xl m-2 font-bold">Danh Sách Khách Hàng</h1>
    <div class="m-2 flex">
        <%= button_to destroy_all_renters_path, method: :get, class: "btn btn-danger btn-large", data: { turbo_confirm: "Bạn có chắc chắn muốn xóa tất cả không?"} do %><i
                class="fa-solid fa-close mr-2"></i>Xóa Tất Cả<% end %>
    </div>
  </div>
  <div class="m-4">
    <form>
      <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
      <div class="relative w-[300px] sm:w-[350px]">
          <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
            <%= vite_image_tag("images/icons/glass.svg", class: "w-4 h-4 text-gray-500 dark:text-gray-400")%>
          </div>
          <input type="search" id="default-search" class="block w-full p-4 pr-20 mr-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Nhập tên khách hàng..." required>
          <button type="submit" class="text-white absolute end-1.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Search</button>
      </div>
    </form>
  </div>
  <!-- table -->
  <div
    class="relative overflow-x-auto border-dashed shadow-lg sm:rounded-lg m-4 overflow-y-auto max-w-[350px] sm:max-w-[600px] lg:max-h-[400px] lg:max-w-full">
    <table class="w-full text-sm text-left rtl:text-right border-dashed border-b text-gray-500 dark:text-gray-400 min-h-[350px]">
        <thead
            class="text-xs text-gray-700 uppercase bg-slate-300 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-6 py-3">
                  Renter Name
              </th>
              <th scope="col" class="px-6 py-3">
                  <div class="flex items-center">
                      Phone Number
                      <a href="#">
                        <%= vite_image_tag 'images/icons/arrange.svg' , class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                      </a>
                  </div>
              </th>
              <th scope="col" class="px-6 py-3">
                  <div class="flex items-center">
                      Identity
                      <a href="#">
                        <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                      </a>
                  </div>
              </th>
              <th scope="col" class="px-6 py-3">
                  <div class="flex items-center">
                      Address
                      <a href="#"> <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                      </a>
                  </div>
              </th>
              <th scope="col" class="px-6 py-3">
                  <div class="flex items-center">
                      Gender
                      <a href="#">
                        <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                      </a>
                  </div>
              </th>
              <th scope="col" class="px-6 py-3">
                  <div class="flex items-center">
                      Deposit
                      <a href="#"> <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                      </a>
                  </div>
              </th>
                <th scope="col" class="px-6 py-3">
                  <div class="flex items-center">
                      Status
                      <a href="#">
                            <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                      </a>
                  </div>
              </th>
              </th>
                <th scope="col" class="px-6 py-3">
                  <div class="flex items-center">
                      Role
                      <a href="#">
                            <%= vite_image_tag 'images/icons/arrange.svg', class: 'w-3 h-3 ms-3.5', alt: 'Arrange Icon' %>
                      </a>
                  </div>
              </th>
              <th scope="col" class="px-6 py-3">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
        </thead>
        <tbody id="renter-list">
          <% @renters.each do |renter|%>
            <tr
                class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 cursor-pointer">
                <th scope="row"
                    class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                    data-controller="clickable" data-link="<%= renter_path(renter) %>" data-action="click->clickable#click">
                  <%= renter.name %>
                </th>
                <td class="px-6 py-4" data-controller="clickable" data-link="<%= renter_path(renter) %>" data-action="click->clickable#click">
                  <%= renter.phone_number%>
                </td>
                <td class="px-6 py-4" data-controller="clickable" data-link="<%= renter_path(renter) %>" data-action="click->clickable#click">
                  <%= renter.identity%>
                </td>
                <td class="px-6 py-4" data-controller="clickable" data-link="<%= renter_path(renter) %>" data-action="click->clickable#click">
                  <%= renter.address%>
                </td>
                <td class="px-6 py-4" data-controller="clickable" data-link="<%= renter_path(renter) %>" data-action="click->clickable#click">
                  <%= renter.gender == "male"? "Nam" : "Nữ"%>
                </td>
                <td class="px-6 py-4" data-controller="clickable" data-link="<%= renter_path(renter) %>" data-action="click->clickable#click">
                  <%= renter.deposit%>
                </td>
                <td class="px-6 py-4" data-controller="clickable" data-link="<%= renter_path(renter) %>" data-action="click->clickable#click">
                  <%= "Đang ở #{Room.find_by(id: renter.room_id)&.name}"%>
                </td>
                <td class="px-6 py-4" data-controller="clickable" data-link="<%= renter_path(renter) %>" data-action="click->clickable#click">
                  <%= renter.renter_type == "main" ? "Người đứng tên" : "Người cùng phòng"%>
                </td>
                <td class="px-6 py-4 flex justify-center items-center h-full">
                    <%= button_to "Edit", edit_renter_path(renter), method: :get, class: "btn btn-primary btn-large", remote: true, data: {turbo_stream: ""}, onClick: "my_modal_4.showModal()" %>
                    <%= button_to "Delete", renter_path(renter), method: :delete, class: "btn btn-danger btn-large", data: { turbo_confirm: "Bạn có chắc chắn muốn xóa khách hàng này?" }, remote: true%>
                </td>
            </tr>
          <%end%>
        </tbody>
    </table>
  </div>
</div>
<%= render "shared/modal"%>
