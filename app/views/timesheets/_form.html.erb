<%= simple_form_for @timesheet do |f| %>
  <%= f.input :start_time, as: :string,
              input_html: { data: { datepicker_target: 'input' } },
              wrapper_html: { class: 'mb-4' },
              label: 'Start time:',
              label_html: { class: 'mb-2 fw-bold' }  %>
  <%= f.input :end_time, as: :string,
              input_html: { data: { datepicker_target: 'input' } },
              wrapper_html: { class: 'mb-4' },
              label: 'End time:',
              label_html: { class: 'mb-2 fw-bold' } %>
  <%= f.submit 'Save' %>
<% end %>