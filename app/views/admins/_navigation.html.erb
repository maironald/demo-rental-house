<aside id="logo-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0" aria-label="Sidebar">
  <div class="h-full px-3 py-4 overflow-y-auto bg-gray-50 dark:bg-gray-800">
    <%= link_to admins_dashboard_index_path, class: "flex items-center ps-2.5 mb-5" do %>
      <%= vite_image_tag("images/logo/logo.png", class: "h-20 w-10 me-3 sm:h-7", alt: "Flowbite Logo")%>
      <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">Rental House</span>
    <%end%>
    <h1 class="text-xl m-6 ml-0 font-serif">Xin chào, <%= current_user.email%></h1>
    <ul class="space-y-2 font-medium">
      <li>
        <%= link_to admins_dashboard_index_path, class: "flex items-center p-4 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group #{active_link_class(['admins/dashboard#index'])}" do %>
          <%= vite_image_tag("images/navigation/renter.svg", class: "w-5 h-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white") %>
          <span class="ms-3">Danh sách người dùng</span>
        <% end %>
      </li>
      <li>
        <%= link_to admins_notifications_path, class: "flex items-center p-4 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group #{active_link_class(['notifications#index'])}" do %>
          <%= vite_image_tag("images/navigation/invoice.svg", class: "w-5 h-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white") %>
          <span class="ms-3">Danh sách các thông báo</span>
        <%end%>
      </li>
      <li>
        <%= link_to destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Bạn có chắc chắc muốn đăng xuất?" }, class: "flex items-center p-4 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group" do %>
          <%= vite_image_tag("images/navigation/signout.svg", class: "w-5 h-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white") %>
          <span class="ms-3">Đăng xuất</span>
        <%end%>
      </li>
    </ul>
  </div>
</aside>
